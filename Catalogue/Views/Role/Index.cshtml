@model IEnumerable<Catalogue.Models.UserRoleViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Add Admin role", "AddAdmin", new { userName = item.UserName }) |
            @Html.ActionLink("Details", "Details", new { userName = item.UserName }) |
            @Html.ActionLink("Delete Admin role", "Delete", new { userName = item.UserName })
        </td>
    </tr>
}

</table>
